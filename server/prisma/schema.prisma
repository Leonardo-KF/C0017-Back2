// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String           @id @unique
  name               String
  email              String           @unique
  password           String
  cpf                String           @unique
  role               String
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  attendanceLists    AttendanceList[]
  ClassroomStudent   Classroom?       @relation(fields: [classroomStudentId], references: [id], name: "classroom student")
  classroomStudentId String?
  ClassroomTeacher   Classroom?       @relation(fields: [classroomTeacherId], references: [id])
  classroomTeacherId String?
}

model AttendanceList {
  id          String    @id @unique
  classroomId String
  Classroom   Classroom @relation(fields: [classroomId], references: [id])
  startDate   DateTime
  endDate     DateTime
  students    User[]
  day         String
}

model Classroom {
  id          String           @id @unique
  name        String
  theme       String
  subject     String
  attendances AttendanceList[]
  students    User[]           @relation(name: "classroom student")
  teachers    User[]
}
